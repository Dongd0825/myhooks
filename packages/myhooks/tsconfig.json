{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node",
    "declaration": true,
  },
  "exclude": [
    "node_modules",
    "lib",
  ]
}